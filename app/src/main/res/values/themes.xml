<resources>

    <!-- Base application theme. -->
    <style name="Theme.SpaceExplorer.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>

        <item name="colorSurface">@color/colorSurface</item>

        <item name="colorControlActivated">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>

        <item name="android:displayOptions">useLogo|showTitle</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarTheme">@null</item>

        <item name="textAppearanceBody1">@style/TextAppearance.SpaceExplorer.Body</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.SpaceExplorer.Headline</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/secondaryText</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
    </style>

    <style name="Theme.SpaceExplorer.Fullscreen" parent="Theme.SpaceExplorer.Base">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:displayOptions">showHome|homeAsUp</item>
    </style>

</resources>
